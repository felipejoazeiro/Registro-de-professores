{% extends 'layout.njk' %}
{% block content %}
    <div class="card table-container">
        <a href="/students/create" class="create">Novo</a>
        <table width="100%">
            <thead>
                <th class="table-name">Nome Completo</th>
                <th class="table-acomp">E-mail</th>
                <th class="table-action">Ação</th>
            </thead>
            <tbody>
                {% for student in students %}
                <tr>
                    <td class="table-name"> <span style="background-image: url({{student.avatar_url}})"></span> {{student.name}}</td>
                    <td class="table-acomp">{{student.email}}</td>
                    <td class="table-action"> <a href="/students/{{student.id}}">View</a></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock content %}