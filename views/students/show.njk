{% block content %}
    <div class="card">
        <section class="img" style="background: url({{student.avatar_url}}) no-repeat center center / cover"></section>
        <section class="form">
            <div class="details">
                <div class="item">
                    <div>Nome</div>
                    <div>{{student.name}}</div>
                </div>
                <div class="item">
                    <div>Anivers√°rio:</div>
                    <div>{{student.birth}}</div>
                </div>
