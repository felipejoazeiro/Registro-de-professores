{% extends 'layout.njk' %}
{% block content %}
    <div class="card">
        <section class="img" style="background: url({{teacher.avatar_url}}) no-repeat center center / cover"></section>
        <section class="form">
            <div class="details">
                <div class="item">
                    <div>Nome</div>
                    <div>{{teacher.name}}</div>
                </div>
                <div class="item">
                    <div>Idade</div>
                    <div>{{teacher.age}}</div>
                </div>
                <div class="item">
                    <div>Grau de escolaridade</div>
                    <div>{{teacher.schooling}}</div>
                </div>
                <div class="item">
                    <div>Tipo de aula</div>
                    <div>{{teacher.type}}</div>
                </div>
                <div class="item">
                    <div>Acompanhamento</div>
                    <div>
                        {% for areas in teacher.area %}
                            <span>{{areas}}</span>
                        {% endfor %}
                    </div>
                </div>
                <div class="item">
                    <div>Desde:</div>
                    <div>{{teacher.created_at}}</div>
                </div>
            </div>
            <a href="/teachers/{{teacher.id}}/edit" class="button">Editar Registro</a>
        </section>
    </div>
{% endblock content %}